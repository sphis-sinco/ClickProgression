{
        "search.exclude": {
                "export/**/*.*": true
        },
        "[haxe]": {
                "editor.formatOnSave": false,
                "editor.formatOnSaveMode": "file",
                "editor.formatOnPaste": false,
                "editor.codeActionsOnSave": {
                        "source.sortImports": "explicit"
                }
        },
        "haxe.enableExtendedIndentation": true,

        "lime.targetConfigurations": [
                {
                        "label": "Newgrounds",
                        "target": "hl",
                        "args": [
                                "-D NEWGROUNDS"
                        ]
                }
        ]
}
